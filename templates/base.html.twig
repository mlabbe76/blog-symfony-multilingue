<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% trans %}My-Symfony-Blog{% endtrans %}{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-info">
                <a class="navbar-brand" href="/">Blog-Symfony</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
              
                <div class="collapse navbar-collapse" id="navbarColor01">
                  <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                      <a class="nav-link" href="/">{% trans %}Home{% endtrans %}
                        <span class="sr-only">(current)</span>
                      </a>
                    </li>
                  </ul>
                  <ul class="navbar-nav ml-auto">
                    {% for locale in locales %}
                        {% if locale != app.request.locale %}
                        <li class="nav-item active">
                          <a class="nav-link" href="{{ path('change_locale', {'locale':locale})}}"><img src="{{ asset('assets/img/'~locale~'.jpg') }}" alt="{{locale}}" width="30px"></a>
                        </li>
                        {% endif %}
                    {% endfor %}
                  </ul>
                </div>
              </nav>
        </header>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
